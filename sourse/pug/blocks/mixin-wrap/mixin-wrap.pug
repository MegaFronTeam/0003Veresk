mixin addblock()
	+b.addBlock
		+e.btn--minus(type="button")
		input(type="text" value="1")
		+e.btn--plus(type="button")


mixin product-item(t)
	+b.product-item
		+pic(`product-item-1.png`, `bg`, 0)
		h6!= t
		table
			tr
				td Тип
				td Lorem ipsum <br> dolor sit amet
			tr
				td Адрес
				td Lorem ipsum <br> dolor sit amet
			tr
				td Площадь
				td 000 м2
		+e.price 35 000 000 ₽
		+e.btn(href="#") Подробнее

mixin slider-controls
	+b.slider-controls
		.swiper-button-hand.swiper-button-hand-prev.swiper-button-prev
			+icon('arrow-left')
		.swiper-pagination
		.swiper-button-hand.swiper-button-hand-next.swiper-button-next
			+icon('arrow-right')

mixin request()
	+b.request
		+form-wrap
			h4 Подбор или продажа земельного участка
			+e.subtitle Перезвоним вам в&nbsp;течение 15&nbsp;минут <br> в&nbsp;рабочее время
			+e.row.row
				.col-6
					label
						input.btn-check(type='radio' name='name1' autocomplete='off')
						.btn.btn-sm.w-100.btn-outline-primary( ) Подбор
				.col-6
					label
						input.btn-check(type='radio' name='name1' autocomplete='off')
						.btn.btn-sm.w-100.btn-outline-primary() Продажа
				.col-12
					+input("Ваше имя", "text")
				.col-12
					+input("Номер телефона", "tel")
				.col-12
					+input("Email", "email")
				.col-12
					+e.BUTTON.btn Отправить заявку
				.col-12
					+e.agreement Отправляя заявку, вы&nbsp;даете свое согласие на&nbsp;обработку #[a(href="#") персональных данных]

mixin request2()
	+b.request--lg
		+form-wrap
			h2 Подбор или продажа земельного участка
			+e.subtitle Перезвоним вам в&nbsp;течение 15&nbsp;минут в&nbsp;рабочее время
			+e.row.row
				.col-6
					label
						input.btn-check(name='name1' type='radio' autocomplete='off')
						.btn.btn-sm.w-100.btn-outline-primary( ) Подбор
				.col-6
					label
						input.btn-check(name='name1' type='radio' autocomplete='off')
						.btn.btn-sm.w-100.btn-outline-primary() Продажа
				.col-md-4
					+input("Ваше имя", "text")
				.col-md-4
					+input("Номер телефона", "tel")
				.col-md-4
					+input("Email", "email")
				+e.col.col-md-auto
					+e.BUTTON.btn Отправить заявку
				.col
					+e.agreement Отправляя заявку, вы&nbsp;даете свое согласие на&nbsp;обработку #[a(href="#") персональных данных]

mixin breadcrumb-wrap()
	+b.breadcrumb-wrap
		.container
			block

mixin small-card(title, text)
	+b.small-card-item
		h4!= title
		span!= text

mixin logo()
	+b.logo-link(href="#")
		img(src="img/svg/logo.svg" loading="lazy", alt="")

