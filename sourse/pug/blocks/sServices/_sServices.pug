mixin sServices(btn, h, ...items)
	// start sServices
	+b.SECTION.sServices.section#sServices&attributes(attributes)
		.container
			+b.section-title
				h2!= h
				each item in items
					p!= item
			block
			if btn
				+e.btn-wrap
					+e.btn.link-modal-js(href="#request")!= btn
	// end sServices


