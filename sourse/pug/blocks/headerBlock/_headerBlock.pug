mixin headerBlock()
	// start headerBlock
	+b.headerBlock--2.section.bg-wrap#headerBlock&attributes(attributes)
		+e.slider--js.swiper.main-slider
			.swiper-wrapper
				- for (var x = 0; x < 3; x++)
					+e.slide.swiper-slide.bg-wrap
						+pic("slide.jpg",'bg',0).picture-bg.
		.container
			+e.row.row
				.col
					+e.text-block
						h1 Продажа земельных участков в Москве
						p Pellentesque mollis nibh non nibh laoreet vulputate. Mauris id metus dignissim, efficitur nulla quis. 
					+slider-controls
				.col-auto
					+request()

	// end headerBlock
